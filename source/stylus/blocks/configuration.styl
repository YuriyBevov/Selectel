.configuration__wrapper
  @extend container

  display flex
  flex-direction column
  padding-top 1px

.configuration__title
  font(GothamPro_Bold, 32px, 38px)

  letter-spacing 0.0025em
  margin 0 auto
  margin-bottom 62px
  color darkblue

.configuration__select
  width 100%
  display flex
  flex-wrap wrap
  margin-bottom 59px

.configuration__type-box
  display flex
  width 486px

  & input[type="checkbox"]
    display none

.configuration__type-label
  position relative
  font(GothamPro_Regular, 16px, 28px)

  letter-spacing 0.0025em
  width 100px
  padding-left 32px
  margin-right 83px
  color darkblue
  cursor pointer

  &--RAID
    margin-right 89px

  &:nth-child(3n)
    margin-right 0

  &::before
    position absolute
    top 52%
    left 2px
    content ""
    width 18px
    height 18px
    border 2px solid darkblue
    background-color transparent
    border-radius 50%;
    transform translateY(-50%)

.configuration__type-box input[type="checkbox"]:checked + .configuration__type-label::before
  border-color checked
  background-image url("../img/mark.svg")
  background-repeat no-repeat
  background-position center
  background-size 10.31px 7.34px

.configuration__type-box input[type="checkbox"]:disabled + .configuration__type-label::before
  border-color secondary_grey

.configuration__description
  font(GothamPro_Regular, 18px, 22px)

  letter-spacing 0.0025em
  margin-bottom 30px
  color darkblue

@media (max-width desktop-width)
  .configuration__title
    font-size 26px
    line-height 31px

  .configuration__type-box
    width 335px

  .configuration__type-label
    width 75px
    margin-right 40px

@media (max-width tablet-width)
  .configuration__wrapper
    padding-top 31px

  .configuration__title
    font-size 18px
    line-height 22px
    width 100%
    text-align center
    margin-bottom 33px

  .configuration__select
    flex-direction column
    margin-bottom 8px

  .configuration__type-box
    flex-direction column
    margin-bottom 0

  .configuration__type-label
    font-size 12px
    padding-left 27px
    margin-right 0
    margin-bottom 11px

  .configuration__range-box
    margin-bottom 41px

  .configuration__description
    font-size 14px
    line-height 17px
    margin-bottom 15px
