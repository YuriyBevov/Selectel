.header__wrapper
  @extend container
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items center
  min-height 56px

.header__list
  display flex
  flex-wrap wrap
  justify-content flex-end
  list-style none
  margin 0
  padding 0
  flex-grow 1

.header__item
  width 155px
  margin-right 30px

  &:nth-child(3n)
    margin-right 0
    padding-right 0

  &-icon
    fill grey

    &--phone
      margin-right 4px
    &--mail
      margin-right 10px
    &--tg
      margin-right 8px

.header__link
  font(GothamPro_Regular, 12px, 20px)

  display flex
  align-items center
  text-decoration none
  letter-spacing 0.0025em
  color grey

@media (max-width: desktop-width)
  .header__item
    width auto
    margin-right 38px

    & span
      display none

    & svg
      margin-right 0

@media (max-width: tablet-width)
  .header__wrapper
    min-height 32px
    padding 0 20px

  .header__item
    margin-right 16px

    &-icon
      &--phone
        width 8px
        height 8.67px
      &--mail
        width 9px
        height 6.75px
      &--tg
        width 8px
        height 8px
