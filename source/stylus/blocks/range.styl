.range
  width 355px
  display flex
  align-items center
  flex-grow 1

.range__name
  font(GothamPro_Regular, 18px, 22px)

  letter-spacing 0.0025em
  margin-right 31px
  color darkblue

.range__value
  display none

.range__box
  position relative
  height 2px
  width 246px
  border-radius 3px
  background-color lightgrey

.range__cors
  position absolute
  font(GothamPro_Regular, 12px, 14px)

  letter-spacing 0.0025em
  margin-top 5px
  color secondary_grey

  &--min
    left 0

  &--max
    right 0

.range__cors--current
  left 50%
  transform translateX(-50%)
  margin-top 15px
  color darkblue

.range__pin
  position: absolute;
  top 50%
  left 50%
  width 12px
  height 12px
  border-radius 50%
  cursor pointer
  background-color white
  box-shadow 0px 1px 3px rgba(0, 0, 0, 0.18)
  transform translate(-50%, -50%)
